<h1>Editing book</h1>
<% if @book.errors.any? %>
  <div class="errors">
    <p class="errors-count"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
     <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
     </ul>
  </div>
<% end %>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
      <div class="field">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title %>
      </div>
      <div class="area">
        <%= f.label :body, 'Body' %>
        <%= f.text_area :body %>
      </div>
      <div class="buttun">
        <%= f.submit 'Update Book' %>
      </div>
<% end %>

