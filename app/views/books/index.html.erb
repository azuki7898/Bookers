<p class="flash"><%= flash[:notice] %></p>
<h1>Books</h1>
<div class="table_index">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th clspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to 'Show', book_path(book) %></td>
         <td><%= link_to 'Edit', edit_book_path(book) %></td>
         <td><%= link_to 'Destroy', destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
       </tr>
      </tbody>
    <% end %>
  </table>
</div>

<div class="new">
  <h2>New book</h2>

  <% if @book.errors.any? %>
   <div class="errors">
    <p class="errors-count"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
    </ul>
   </div>
  <% end %>
  <%= form_with model:@book, local:true do |f| %>
    <div class="field">
       <%= f.label :title, 'Title' %>
       <%= f.text_field :title %>

    </div>
    <div class="area">
      <%= f.label :body, 'Body' %>
      <%= f.text_area :body %>
    </div>

   <div class="buttun">
     <%= f.submit 'Create Book' %>
   </div>
  <% end %>
</div>

