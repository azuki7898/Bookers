<h1>Bookers</h1>
<div class="table_index">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th clspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td>Show</td>
         <td>Edit</td>
         <td>Destroy</td>
       </tr>
      </tbody>
    <% end %>
  </table>
</div>

<div class="new">
  <%= form_with model:@book, local:true do |f| %>
    <h2>New book</h2>
    <p>Title</p>
     <%= f.text_field :title %>
   <p>Body</p>
    <%= f.text_area :body %>

   <%= f.submit 'Create book' %>
  <% end %>
</div>

