<%= flash[:notice] %>
<h1>Bookers</h1>
<div class="table_index">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th clspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to 'Show', show_book_path(book) %></td>
         <td><%= link_to 'Edit', edit_book_path(book) %></td>
         <td><%= link_to 'Destroy', destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
       </tr>
      </tbody>
    <% end %>
  </table>
</div>

<div class="new">
  <h2>New book</h2>
   <% if @book.errors.any? %>
   <%= @book.errors.count %>errors prohibited this book from being saved:
   <% @book.errors.full_messages.each do |message| %>
    <ul>
     <li><%= message %></li>
    </ul>
   <% end %>
  <% end %>
  <%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
     <%= f.text_field :title %>
   <p>Body</p>
    <%= f.text_area :body %>

   <%= f.submit 'Create book' %>
  <% end %>
</div>

